<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.pizzaninja.pizzaninja.StatusActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.NoActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:text="@string/title_order_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textStatusTitle"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal" />

    <TextView
        android:text="Status: Accepting Order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textStatus"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp" />

    <include layout="@layout/content_confirm_order"
        android:layout_width="match_parent"
        android:layout_weight="0.42"
        android:layout_height="360dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:text="Delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDelivery"
            android:textSize="18sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_marginRight="50dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="40dp">

            <TextView
                android:text="Tax:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textTax"
                android:textSize="18sp" />

            <TextView
                android:text="Total: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textTotal"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/buttonRate"
            android:layout_height="wrap_content"
            android:text="@string/action_rate"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_width="150dp"
            android:layout_marginRight="15dp"
            android:onClick="OpenRateUs" />

        <Button
            android:id="@+id/buttonOK"
            android:layout_height="wrap_content"
            android:text="@string/action_ok"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_width="150dp"
            android:layout_marginLeft="15dp"
            android:onClick="CloseStatus" />

    </LinearLayout>

</LinearLayout>
