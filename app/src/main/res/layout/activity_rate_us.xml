<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_rate_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pizzaninja.pizzaninja.RateUsActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.NoActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Rate Us" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:text="Rate Store #546"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textStore"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pz0"
            android:id="@+id/imageStore"
            android:layout_marginBottom="30dp"
            android:clickable="true"
            android:onClick="onClickStore" />

        <TextView
            android:text="Rate Driver Jerry Jones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textDriver"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pz0"
            android:id="@+id/imageDriver"
            android:layout_marginBottom="40dp"
            android:clickable="true"
            android:onClick="onClickDriver" />

        <Button
            android:text="Submit"
            android:id="@+id/buttonSubmit"
            android:background="@color/colorPrimary"
            android:layout_height="40dp"
            android:layout_width="130dp"
            android:layout_marginBottom="50dp"
            android:onClick="Close" />
    </LinearLayout>

</LinearLayout>
